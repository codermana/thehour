---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import SessionsIndex from '../../components/sessions/SessionsIndex';

const sessions = (await getCollection('sessions')).sort(
	(a, b) => (new Date(`${b.data.date}T00:00:00`)).valueOf() - (new Date(`${a.data.date}T00:00:00`)).valueOf()
);

---

<Layout>
	<SessionsIndex sessions={sessions} client:load>
	</SessionsIndex>
</Layout>
