];

const benefits = [
  {
    emoji: "ðŸ”„",
    title: "Auto-Updates",
    description: "New sessions appear automatically in your calendar"
  },
  {
    emoji: "ðŸ””",
    title: "Reminders",
    description: "Get notifications before each session starts"
  },
  {
    emoji: "ðŸ“±",
    title: "Syncs Everywhere",
    description: "Available on all your devices automatically"
  },
  {
    emoji: "ðŸŽ¯",
    title: "Never Miss Out",
    description: "All sessions in one place, no manual adding"
  }
];

const faqs = [
  {
    question: "How often does the calendar update?",
    answer: "Most calendar apps check for updates every few hours to once a day. New sessions will appear automatically."
  },
  {
    question: "Can I unsubscribe later?",
    answer: "Yes! Just delete the calendar from your calendar app. No registration or account needed."
  },
  {
    question: "Will past sessions show up?",
    answer: "No, the calendar feed only includes upcoming sessions to keep your calendar clean."
  },
  {
    question: "Is my privacy protected?",
    answer: "Absolutely. This is a one-way feed - we don't see your calendar or track subscriptions."
  }
];
---

<Layout>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-codermana-orange to-codermana-dark-orange rounded-2xl mb-6">
        <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
      <h1 class="text-4xl md:text-5xl font-black mb-4 text-gray-900 dark:text-white">
        Subscribe to Our Calendar
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Never miss a session! Subscribe to our calendar feed and get all upcoming CoderMana Hour sessions automatically added to your calendar.
      </p>
    </div>

    <!-- Calendar URL Box -->
    <CalendarFeedBox url={calendarLink} client:load/>

    <!-- Instructions by Platform -->
    <div class="space-y-6 mb-12">
      {platforms.map((platform) => (
        <div class="bg-gray-50 dark:bg-zinc-900 rounded-xl p-6 border border-gray-200 dark:border-zinc-800">
          <div class="flex items-start gap-4">
            <div class="shrink-0">
              <div class={`w-12 h-12 ${platform.iconBg} rounded-lg flex items-center justify-center`}>
                <svg class={`w-7 h-7 ${platform.iconColor}`} viewBox="0 0 24 24" fill="currentColor" set:html={platform.icon} />
              </div>
            </div>

            <div class="flex-1">
              <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">
                {platform.name}
              </h3>

              {platform.sections ? (
                platform.sections.map((section) => (
                  <>
                    {section.subtitle && (
                      <h4 class="font-bold mt-6 mb-2 text-gray-900 dark:text-white first:mt-0">
                        {platform.name} ({section.subtitle})
                      </h4>
                    )}
                    <ol class="space-y-2 text-gray-600 dark:text-gray-400">
                      {section.steps.map((step, idx) => (
                        <li class="flex gap-3">
                          <span class="font-semibold text-codermana-orange">{idx + 1}.</span>
                          <span set:html={step.text} />
                        </li>
                      ))}
                    </ol>
                  </>
                ))
              ) : (
                <ol class="space-y-2 text-gray-600 dark:text-gray-400">
                  {platform.steps?.map((step, idx) => (
                    <li class="flex gap-3">
                      <span class="font-semibold text-codermana-orange">{idx + 1}.</span>
                      <span>
                        <span set:html={step.text} />
                        {step.showUrl && (
                          <code class="bg-gray-200 dark:bg-zinc-800 px-2 py-1 rounded text-sm block mt-2 break-all">
                            {calendarLink}
                          </code>
                        )}
                      </span>
                    </li>
                  ))}
                </ol>
              )}

              {platform.note && (
                <div class={`mt-4 ${platform.noteBg} border ${platform.noteBorder} rounded-lg p-4`}>
                  <p class={`text-sm ${platform.noteText} break-words`}>
                    <strong>Note:</strong> {platform.note}
                  </p>
                </div>
              )}
            </div>
          </div>
        </div>
      ))}

      <!-- Other Apps -->
      <div class="bg-gray-50 dark:bg-zinc-900 rounded-xl p-6 border border-gray-200 dark:border-zinc-800">
        <div class="flex items-start gap-4">
          <div class="shrink-0">
            <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900/30 rounded-lg flex items-center justify-center">
              <svg class="w-7 h-7 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
              </svg>
            </div>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">Other Calendar Apps</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
              Most calendar applications support subscribing to .ics feeds. Look for options like:
            </p>
            <ul class="space-y-2 text-gray-600 dark:text-gray-400">
              {["Add calendar from URL", "Subscribe to calendar", "Add internet calendar", "Import calendar feed"].map((option) => (
                <li class="flex gap-2">
                  <span class="text-codermana-orange">â€¢</span>
                  <span>"{option}"</span>
                </li>
              ))}
            </ul>
            <p class="text-gray-600 dark:text-gray-400 mt-4">
              Then paste the calendar URL: <code class="bg-gray-200 dark:bg-zinc-800 px-2 py-1 rounded text-sm block mt-2 break-all">{calendarLink}</code>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Benefits -->
    <div class="bg-gradient-to-br from-green-50 to-blue-50 dark:from-green-900/20 dark:to-blue-900/20 rounded-2xl p-8 mb-12 border border-green-200 dark:border-green-800">
      <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">âœ¨ Benefits of Subscribing</h2>
      <div class="grid md:grid-cols-2 gap-4">
        {benefits.map((benefit) => (
          <div class="flex gap-3">
            <div class="shrink-0 text-2xl">{benefit.emoji}</div>
            <div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-1">{benefit.title}</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">{benefit.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- FAQ -->
    <div class="bg-gray-50 dark:bg-zinc-900 rounded-xl p-8 mb-12 border border-gray-200 dark:border-zinc-800">
      <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Frequently Asked Questions</h2>
      <div class="space-y-6">
        {faqs.map((faq) => (
          <div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{faq.question}</h3>
            <p class="text-gray-600 dark:text-gray-400">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Need Help -->
    <div class="bg-codermana-orange/10 dark:bg-codermana-orange/20 rounded-xl p-8 text-center border border-codermana-orange/30">
      <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Need Help?</h2>
      <p class="text-gray-700 dark:text-gray-300 mb-6">
        Having trouble subscribing? We're here to help!
      </p>
      <a href="mailto:thehour@codermana.com?subject=Calendar Subscription Help" class="inline-flex items-center gap-2 bg-codermana-orange hover:bg-codermana-dark-orange text-white px-6 py-3 rounded-lg font-semibold transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        Email Us
      </a>
    </div>
  </div>
</Layout>
